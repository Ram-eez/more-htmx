package components

templ Layout() {
    <html>
        <head>
            <script src="/static/js/htmx.min.js"></script>
            <title>HTMX Examples</title>
        </head>
        <body>
            { children... }
        </body>
    </html>
}

templ Page(count int64, progress int) {
    @Layout() {
        @CounterExample(count)
        @MouseClick()
        @NewsExample()
        @ProgressBar(progress)
    }
}